    "blockquote": "ctrl+shift+y",
    "code": "ctrl+shift+,",
    "definition_list": "ctrl+shift+d",
    "heading": "ctrl+alt+1",
    "horizontal_rule": "ctrl+shift+alt+_",
    "hyperlink": "ctrl+shift+h",
    "indent": "ctrl+shift+]",
    "keyboard": "ctrl+shift+k",
    "markdown": "ctrl+shift+0",
    "ordered_list": "ctrl+]",
    "outdent": "ctrl+shift+[",
    "pre": "ctrl+shift+.",
    "remove_hyperlink": "ctrl+shift+alt+h",
    "strikethrough": "alt+shift+5",
    "table": "ctrl+shift+3",
    "text_align_centered": "ctrl+shift+alt+b",
    "text_align_flush_left": "ctrl+shift+alt+l",
    "text_align_flush_right": "ctrl+shift+alt+r",
    "text_align_justified": "ctrl+shift+alt+s",
